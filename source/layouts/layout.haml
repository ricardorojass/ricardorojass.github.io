!!!
%html
  %head
    %meta{:charset => "utf-8"}/
    / Always force latest IE rendering engine or request Chrome Frame
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    / Use title if it's in the page YAML frontmatter
    %title= current_page.data.title || "Ricardo Rojas"
    = stylesheet_link_tag "all"
  %body{class: "page_classes"}
    %nav.navbar.navbar-inverse.navbar-fixed-top.main-nav
      .container
        / Brand and toggle get grouped for better mobile display
        .navbar
          %button.navbar-toggle{"data-target" => "navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "/"} Start Bootstrap
          / Collect the nav links, forms, and other content for toggling
          .collapse.navbar-collapse
            %ul.nav.navbar-nav.navbar-right
              %li
                = link_to "Portafolio", "/portafolio.html"
              %li
                = link_to "About", "/about.html"
              %li
                = link_to "Blog", "/blog.html"
          / /.navbar-collapse
        / /.container
    = yield
    / Footer
    %footer
      .container
        .row
          .col-lg-12
            %p Copyright Â© Ricardo Rojas 2015
    = javascript_include_tag "all"
